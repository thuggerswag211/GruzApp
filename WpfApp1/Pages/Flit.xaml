<Page x:Class="WpfApp1.Pages.Flit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Flit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ClientsLV" HorizontalContentAlignment="Stretch" SelectionChanged="FioFlit_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RequestID" Binding="{Binding RequestID}" />
                <DataGridTextColumn Header="RequestDate" Binding="{Binding RequestDate}" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                <DataGridTextColumn Header="DeparturePoint" Binding="{Binding DeparturePoint}" />
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="ApplicantID" Binding="{Binding ApplicantID}" />
                <DataGridTextColumn Header="DriverID" Binding="{Binding DriverID}" />
                <DataGridTextColumn Header="VehicleID" Binding="{Binding VehicleID}" />
                <DataGridTextColumn Header="CompletionDate" Binding="{Binding CompletionDate}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Статус" FontSize="14" HorizontalAlignment="Left" Margin="0,0,0,0"></TextBlock>
            <ComboBox x:Name="FioFlit" Width="150" Margin="10,0,0,0" SelectionChanged="FioFlit_SelectionChanged"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Height="30" Width="150" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
