<Page x:Class="WpfApp1.Pages.AddVenicl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddVenicl">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Гос.Номер"/>
            <TextBox Text="{Binding LicensePlate}" Margin="5"/>
            <TextBlock Text="Модель"/>
            <TextBox Text="{Binding Model}" Margin="5"/>
            <TextBlock Text="Грузоподъемность"/>
            <TextBox Text="{Binding LoadCapacity}" Margin="5"/>
            <TextBlock Text="Статус"/>
            <TextBox Text="{Binding Status}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="Savebtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="Backbtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
