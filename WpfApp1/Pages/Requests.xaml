<Page x:Class="WpfApp1.Pages.Requests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Requests">

    <Grid>
        <ListView x:Name="ClientsLV">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding RequestID}" Margin="5"/>
                        <TextBlock Text="{Binding RequestDate}" Margin="5"/>
                        <TextBlock Text="{Binding Description}" Margin="5"/>
                        <TextBlock Text="{Binding DeparturePoint}" Margin="5"/>
                        <TextBlock Text="{Binding Destination}" Margin="5"/>
                        <TextBlock Text="{Binding Status}" Margin="5"/>
                        <TextBlock Text="{Binding UserID}" Margin="5"/>
                        <TextBlock Text="{Binding DriverID}" Margin="5"/>
                        <TextBlock Text="{Binding VehicleID}" Margin="5"/>
                        <TextBlock Text="{Binding CompletionDate}" Margin="5"/>
                        <Button Content="Изменить" Margin="5" Height="30" Width="150" Click="EditBtn_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button x:Name="AddBtn" Content="Добавить" Margin="5" Height="30" Width="150" Click="AddBtn_Click"/>
            <Button x:Name="DelBtn" Content="Удалить" Margin="5" Height="30" Width="150" Click="DelBtn_Click"/>
            <Button x:Name="BackBtn" Content="Назад" Margin="5" Height="30" Width="150" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
