<Page x:Class="WpfApp1.Pages.AddReq"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddReq">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Дата подачи заявки"/>
            <TextBox Text="{Binding RequestDate}" Margin="5"/>
            <TextBlock Text="Описание перевозки"/>
            <TextBox Text="{Binding Description}" Margin="5"/>
            <TextBlock Text="Место погрузки"/>
            <TextBox Text="{Binding DeparturePoint}" Margin="5"/>
            <TextBlock Text="Пункт назначения"/>
            <TextBox Text="{Binding Destination}" Margin="5"/>
            <TextBlock Text="Статус заявки"/>
            <TextBox Text="{Binding Status}" Margin="5"/>
            <TextBlock Text="Заявитель"/>
            <TextBox Text="{Binding UserID}" Margin="5"/>
            <TextBlock Text="Назначенный водитель"/>
            <TextBox Text="{Binding DriverID}" Margin="5"/>
            <TextBlock Text="Назначенное ТС"/>
            <TextBox Text="{Binding VehicleID}" Margin="5"/>
            <TextBlock Text="Дата выполнения заявки"/>
            <TextBox Text="{Binding CompletionDate}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="Savebtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="Backbtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
